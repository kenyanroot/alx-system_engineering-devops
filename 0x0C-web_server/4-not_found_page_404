#!/usr/bin/env bash
# Installs nginx and configures a custom 404 error page

# Update packages and install nginx
apt-get update
apt-get install -y nginx

# Create the directory for html files if it doesn't already exist
mkdir -p /var/www/html

# Create the main page and the custom 404 page
echo "Holberton School" > /var/www/html/index.html
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Write the nginx server configuration
cat << EOF > /etc/nginx/sites-available/default
server {
    listen 80;
    listen [::]:80 default_server;
    server_name _;
    root /var/www/html;
    index index.html;

    location /redirect_me {
        return 301 https://twitter.com/Emmanue17280546;
    }

    error_page 404 /404.html;
    location = /404.html {
        root /var/www/html;
        internal;
    }
}
EOF

# Ensure nginx is aware of the new site configuration
ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default 2> /dev/null

# Set proper permissions and ownership
chown -R www-data:www-data /var/www/html
chmod -R 755 /var/www/html

# Restart nginx to apply the changes
service nginx restart

# Test the configuration
nginx -t
